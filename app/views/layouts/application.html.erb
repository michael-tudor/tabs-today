<!DOCTYPE html>
<html>
  <head>
    <title>tabs.today / online notes</title>
    <%= favicon_link_tag asset_path('favicon.ico') %>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class="container-fluid top-bar navigation-header">
      <div class="row">
        <div class="col">
          <%= link_to 'tabs.today',  marks_path, class: 'logo-lp' %>
        </div>

        <div class="col">
          <div class="user-menu">
            <% if user_signed_in? %>
              <%= link_to edit_user_registration_path do %>
                <i class="icofont-edit"></i>
                <span>Edit profile</span>
              <% end %>
              <%= link_to destroy_user_session_path, method: :delete, data: { confirm: 'Are you sure?' } do %>
                <i class="icofont-logout"></i>
                <span>Logout</span>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="bottom-bar">
      <%= yield %>
    </div>
  </body>
</html>
