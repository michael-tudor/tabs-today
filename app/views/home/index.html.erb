<section class="minds">
  <div class="container">
    <div class="row">
      <div class="col-md-8 what-is-it">
        <h1>Online Notes</h1>
        <h2>More than 180 thousand people use <strong>tabs.today</strong> daily!</h2>
      </div>

      <div class="col-md-4 sign-up">
        <h3><strong>Tabs Today</strong> is free forever</h3>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: nil, id: nil }) do |f| %>
          <%= render 'devise/shared/error_messages', resource: resource %>
          <%= f.email_field :email, class: 'form-control form-control-lg', autofocus: true, autocomplete: 'email', placeholder: 'Enter your email' %>
          <%= f.password_field :password, class: 'form-control form-control-lg', autocomplete: 'new-password', placeholder: 'Enter password' %>
          <%= f.password_field :password_confirmation, class: 'form-control form-control-lg', autocomplete: 'new-password', placeholder: 'Enter confirmation password' %>
          <%= f.submit 'Sign up', class: 'btn btn-success btn-lg' %>
        <% end %>
      </div>
    </div>
  </div>
</section>

