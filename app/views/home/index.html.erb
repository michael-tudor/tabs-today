<% if params[:lang] == 'ru' %>
  <section class="minds">
    <div class="container">
      <div class="row">
        <div class="col-md-8 what-is-it">
          <h1>Онлайн заметки</h1>
          <h2><strong>Tabs Today</strong> пользуются более 180 тысяч человек со всего мира каждый день.</h2>
        </div>

        <div class="col-md-4 sign-up">
          <h3>Бесплатно навсегда</h3>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: nil, id: nil }) do |f| %>
            <%= f.email_field :email, class: 'form-control form-control-lg', autocomplete: 'email', placeholder: 'Введите адрес эл. почты' %>
            <%= f.password_field :password, class: 'form-control form-control-lg', autocomplete: 'new-password', placeholder: 'Введите пароль' %>
